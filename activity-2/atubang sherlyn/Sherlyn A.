		       System.out.println("[2]GUISADO: $20");
		       System.out.println("[3]GINAMAY: $20");
		       System.out.println("[4]FRIED CHICKEN: $15");
		       System.out.println("[5]ADOBO: $25");
		       
		        System.out.println("ENTER ITEM:");
		        item=sherlyn.nextInt();
		        //FOOD PRICES//
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc PORK LIEMPO");
		            total=total+50;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc GUISADO");
		            total=total+20;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc GINAMAY");
		            total=total+20;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc FRIED CHICKEN");
		            total=total+15;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc ADOBO");
		            total=total+25;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		        
		    }else if(ctgry==2){
		        System.out.println("--YOU SELECTED SNACKS--");
		        //SNACKS CHOICES//
		       System.out.println("[1]PANCAKE: $10");
		       System.out.println("[2]PIZZA: $20");
		       System.out.println("[3]HOTDOG: $5");
		       System.out.println("[4]ICE CREAM: $15");
		       System.out.println("[5]SHAWARMA: $25");
		        //SNACKS PRICES//
		        System.out.println("ENTER ITEM:");
		        item=sherlyn.nextInt();
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc PANCAKE");
		            total=total+10;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc PIZZA");
		            total=total+20;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc HOTDOG");
		            total=total+5;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc ICE CREAM");
		            total=total+15;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc SHAWARMA");
		            total=total+25;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		    }else if(ctgry==3){
		        System.out.println("--YOU SELECTED BEVERAGES--");
		        //BEVERAGE CHOICES//
		       System.out.println("[1]COKE: $20");
		       System.out.println("[2]NESTEA: $50");
		       System.out.println("[3]REDHORSE: $125");
		       System.out.println("[4]STING: $35");
		       System.out.println("[5]WATER: $15");
